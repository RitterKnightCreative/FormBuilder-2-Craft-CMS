{% set adminPermission = settings.canDoActions is defined ? settings.canDoActions %}

<div class="option-item {% if adminPermission %}option-enabled{% endif %}" 
    id="tools-admin-permissions"
    data-modal="false">
    <span class="option-title">
        <span class="option-text">{{ "Allow Non-Admins" |t }} <span class="info">{{ "Allow non-admins to add/update forms." |t }}</span></span>
    </span>
    <div class="option-actions">
        {% if adminPermission %}
            <a href="#" class="btns btn-small btn-moss toggle-option" title="{{ "Toggle" |t }}">{{ "Disable" |t }}</a>
        {% else %}
            <a href="#" class="btns btn-small btn-moss toggle-option" title="{{ "Toggle" |t }}">{{ "Enable" |t }}</a>
        {% endif %}
    </div>
    <input type="checkbox" value="{{ settings.canDoActions }}" class="enable-form-option hidden" name="canDoActions" {% if adminPermission %}checked{% endif %}>
</div>