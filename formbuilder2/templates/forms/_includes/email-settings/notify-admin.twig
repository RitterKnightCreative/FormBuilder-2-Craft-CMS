<input type="hidden" value="1" class="enable-notification-section" name="notificationSettings[notifySubmission]" {% if form.notificationSettings.notifySubmission %}checked{% endif %}>

<div class="setup-container">
    <div class="notification-email-tout">
        <header>
            <span class="tout-title">Email Settings</span>
            <div class="action">
                <a href="#" class="btns btn-link">{{ "Configure" |t }}</a>
            </div>
        </header>
        <div class="body">
            <div class="settings-item">
                <div class="settings-title">
                    <div class="settings-title-text">From Email</div>
                    <div class="settings-result">
                        <code>{{ form.notificationSettings.adminNotification.fromEmail is defined ? form.notificationSettings.adminNotification.fromEmail : craft.systemSettings.email.emailAddress }}</code>
                    </div>
                </div>
                <div class="settings-action">
                    <a href="#" class="settings-edit" title="{{ "Configure Email Settings" |t }}">{% include 'formbuilder2/_includes/icons/pencil' ignore missing %}</a>
                </div>
            </div>
            <div class="settings-item">
                <div class="settings-title">
                    <div class="settings-title-text">From Name</div>
                    <div class="settings-result">
                        <code>{{ form.notificationSettings.adminNotification.fromName is defined ? form.notificationSettings.adminNotification.fromName : craft.systemSettings.email.senderName }}</code>
                    </div>
                </div>
                <div class="settings-action">
                    <a href="#" class="settings-edit" title="{{ "Configure Email Settings" |t }}">{% include 'formbuilder2/_includes/icons/pencil' ignore missing %}</a>
                </div>
            </div>
            <div class="settings-item">
                <div class="settings-title">
                    <div class="settings-title-text">To Email</div>
                    <div class="settings-result">
                        <code>{{ form.notificationSettings.emailSettings.notifyEmail is defined ? form.notificationSettings.emailSettings.notifyEmail : craft.systemSettings.email.emailAddress }}</code>
                    </div>
                </div>
                <div class="settings-action">
                    <a href="#" class="settings-edit" title="{{ "Configure Email Settings" |t }}">{% include 'formbuilder2/_includes/icons/pencil' ignore missing %}</a>
                </div>
            </div>
            <div class="settings-item">Subject: </div>
            <div class="settings-item">Body: </div>
            <div class="settings-item">HTML Body: </div>
            <div class="settings-item">Reply To: </div>
            <div class="settings-item">CC: </div>
            <div class="settings-item">BCC: </div>
            <div class="settings-item">Attachments: </div>
            <div class="settings-item">
                <span class="settings-title">
                    Custom Headers
                </span>
                <span class="settings-action">
                    <a href="#" class="btns btn-link">{{ "Configure" |t }}</a>
                </span>
            </div>
        </div>
    </div>
