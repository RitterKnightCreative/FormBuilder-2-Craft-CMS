{% set container = {
    title: 'Subject' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    text: {
        type: 'text',
        name: 'notify[admin][subject][text]',
        value: form.notify.admin.subject.text is defined ? form.notify.admin.subject.text : '',
        class: 'hidden',
        id: null,
        hint: 'TEXT'
    },
    select: {
        type: 'select',
        name: 'notify[admin][subject][fieldHandle]',
        value: form.notify.admin.subject.fieldHandle is defined ? form.notify.admin.subject.fieldHandle : '',
        options: fieldsOption |json_encode(),
        class: 'hidden',
        id: null,
        hint: 'FIELD'
    },
    checkbox: {
        type: 'checkbox',
        name: 'notify[admin][subject][enabled]',
        value: 'true',
        checked: form.notify.admin.subject.enabled is defined and form.notify.admin.subject.enabled == 'true' ? true : false,
        class: 'hidden',
        id: null
    },
} %}

{% set modal = {
    title: 'Custom Subject' |t,
    instructions: 'Enter custom subject line or select a field that will be used for the custom subject line.' |t,
    successMessage: 'Custom Subject Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}