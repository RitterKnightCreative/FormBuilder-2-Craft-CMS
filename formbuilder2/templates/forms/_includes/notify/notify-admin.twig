{% set adminCc = form.notify.admin.cc is defined ? form.notify.admin.cc %}
<div class="settings-item select-input"
    id="settings-admin-cc"
    data-type="multiple"
    data-name="notify[admin][cc]"
    data-modal="true"
    data-modal-title="{{ "CC" |t }}"
    data-modal-instructions="{{ "The recipients that should be CC’d on the email. Each element of this array should be a nested array containing the keys 'name' and 'email'." |t }}"
    data-input-hint-one="{{ "NAME" |t }}"
    data-input-hint-two="{{ "EMAIL" |t }}"
    data-modal-success-message="{{ "CC Email Added" |t }}">
    <div class="settings-title">
        <div class="settings-title-text">{{ "CC" |t }}</div>
        <div class="settings-result multiple">
        {% for cc in adminCc %}
            <div class="result-item" data-result-index="{{ loop.index0 }}">
                <div class="settings-result-actions">
                    <a href="#" class="settings-result-edit">{% include 'formbuilder2/_includes/icons/pencil' ignore missing %}</a>
                    <a href="#" class="settings-result-delete">{% include 'formbuilder2/_includes/icons/delete' ignore missing %}</a>
                </div>
                <code class="value-one">{{ cc.key }}</code>
                <code class="value-two">{{ cc.value }}</code>
                <input type="hidden" name="notify[admin][cc][{{ loop.index0 }}][key]" value="{{ cc.key }}">
                <input type="hidden" name="notify[admin][cc][{{ loop.index0 }}][value]" value="{{ cc.value }}">
            </div>          
        {% endfor %}
        </div>
    </div>
    <div class="settings-action">
        <a href="#" class="settings-edit btns btn-add" title="{{ "Configure CC" |t }}">{% include 'formbuilder2/_includes/icons/plus-circle' ignore missing %}</a>
    </div>
</div>

