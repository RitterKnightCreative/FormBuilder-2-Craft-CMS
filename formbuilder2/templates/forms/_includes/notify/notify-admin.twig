<input type="checkbox" value="{{ adminNotificationEnabled }}" class="enable-notification-section hidden" name="notify[admin][enabled]" {% if adminNotificationEnabled %}checked {% endif %}>

{% include 'formbuilder2/forms/_includes/notify/admin/from-email' ignore missing %}
{% include 'formbuilder2/forms/_includes/notify/admin/from-name' ignore missing %}
{% include 'formbuilder2/forms/_includes/notify/admin/to-email' ignore missing %}
{% include 'formbuilder2/forms/_includes/notify/admin/reply-to' ignore missing %}
{% include 'formbuilder2/forms/_includes/notify/admin/subject' ignore missing %}
