{% set name = 'notify[' ~ type ~ '][replyTo]' %}

{% if type == 'admin' %}
    {% set value = form.notify.admin.replyTo is defined ? form.notify.admin.replyTo : '' %}
{% else %}
    {% set value = form.notify.submitter.replyTo is defined ? form.notify.submitter.replyTo : '' %}
{% endif %}

{% set container = {
    title: 'Reply-To' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value: value,
        class: 'hidden',
        id: null,
        hint: 'EMAIL'
    }
} %}

{% set modal = {
    title: 'Reply-To' |t,
    instructions: 'The Reply-To email address..' |t,
    successMessage: 'Reply-To Email Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}