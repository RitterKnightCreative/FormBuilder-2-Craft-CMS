{% set name = 'notify[' ~ type ~ '][toEmail]' %}

{% if type == 'admin' %}
    {% set value = form.notify.admin.toEmail is defined ? form.notify.admin.toEmail : '' %}
{% else %}
    {% set value = form.notify.submitter.toEmail is defined ? form.notify.submitter.toEmail : '' %}
{% endif %}

{% set container = {
    title: 'To Email' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value: value,
        class: 'hidden',
        id: null,
        hint: 'EMAIL'
    }
} %}

{% set modal = {
    title: 'To Email' |t,
    instructions: 'The recipientâ€™s email address.' |t,
    successMessage: 'To Email Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}