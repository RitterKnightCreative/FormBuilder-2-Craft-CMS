{% set name = 'notify[' ~ type ~ '][fromName]' %}

{% if type == 'admin' %}
    {% set value = form.notify.admin.fromName is defined ? form.notify.admin.fromName : '' %}
{% else %}
    {% set value = form.notify.submitter.fromName is defined ? form.notify.submitter.fromName : '' %}
{% endif %}

{% set container = {
    title: 'From Name' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value: value,
        class: 'hidden',
        id: null,
        hint: 'NAME'
    }
} %}

{% set modal = {
    title: 'From Name' |t,
    instructions: 'The sender’s name. Defaults to the Sender Name defined in Settings → Email.' |t,
    successMessage: 'From Name Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}