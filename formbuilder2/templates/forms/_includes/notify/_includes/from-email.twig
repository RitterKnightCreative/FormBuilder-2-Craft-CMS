{% set name = 'notify[' ~ type ~ '][fromEmail]' %}

{% if type == 'admin' %}
    {% set value = form.notify.admin.fromEmail is defined ? form.notify.admin.fromEmail : '' %}
{% else %}
    {% set value = form.notify.submitter.fromEmail is defined ? form.notify.submitter.fromEmail : '' %}
{% endif %}

{% set container = {
    title: 'From Email' |t,
    info: null,
    icon: null,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'text',
        name: name,
        value: value,
        class: 'hidden',
        id: null,
        hint: 'EMAIL'
    }
} %}

{% set modal = {
    title: 'From Email' |t,
    instructions: 'The sender’s email address. Defaults to the System Email Address defined in Settings → Email.' |t,
    successMessage: 'From Email Updated' |t,
    inputs: inputs
} %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}