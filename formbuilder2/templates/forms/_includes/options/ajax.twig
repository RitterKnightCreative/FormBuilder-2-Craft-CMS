{% set container = {
    title: 'AJAX Submission' |t,
    info: 'Should we submit the form via ajax? No page refresh will happen.' |t,
    icon: null,
    toggle: true,
    class: null,
    id: null
} %}

{% set inputs = {
    0: {
        type: 'checkbox',
        name: 'options[ajax][enabled]',
        value: 'true',
        checked: form.options.ajax.enabled is defined and form.options.ajax.enabled == 'true' ? true : false,
        class: 'hidden',
        id: null
    },
} %}

{% set modal = null %}

{{ components.optionItem(
    container,
    modal,
    inputs
) }}