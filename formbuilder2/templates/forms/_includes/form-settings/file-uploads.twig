{% set uploadsEnabled = form.formSettings.uploads.enabled ? true : false %}

<div class="option-item {% if uploadsEnabled %}option-enabled{% endif %}" 
    id="option-uploads"
    data-modal="false">
    <span class="option-title">
        <span class="option-text">{{ "File Uploads" |t }} <span class="info">{{ "Will this form upload any files?" |t }}</span></span>
    </span>
    <div class="option-actions">
        {% if uploadsEnabled %}
            <a href="#" class="btns btn-small btn-moss toggle-option" title="{{ "Toggle" |t }}">{{ "Disable" |t }}</a>
        {% else %}
            <a href="#" class="btns btn-small btn-moss toggle-option" title="{{ "Toggle" |t }}">{{ "Enable" |t }}</a>
        {% endif %}
    </div>
    <input type="hidden" value="true" class="enable-form-option" name="formSettings[uploads][enabled]" {% if uploadsEnabled %}checked{% endif %}>
</div>