{% set hideMessages = form.settings.sections.hideMessages is defined ? form.settings.sections.hideMessages %}
<section class="cmp-tout section-collapsible fields-section"{% if hideMessages %} data-collapsed{% endif %}>
    <input type="checkbox" value="1" name="settings[sections][hideMessages]" class="section-toggle hidden" {% if hideMessages %}checked{% endif %}>
    <header class="theme-{{ theme is defined ? theme }}">
        <div class="titlebar">
            <span class="tout-title">{{ "Messages" |t }}</span>
            <div class="preview"></div>
        </div>
        <div class="actions">
            <a class="icons collapser last" title="Collapse" role="combobox" tabindex="0"></a>
            <div class="menu">
                <ul class="padded">
                    <li><a data-icon="collapse" data-action="collapse">{{ "Collapse"|t }}</a></li>
                    <li class="hidden"><a data-icon="expand" data-action="expand">{{ "Expand"|t }}</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="body message-fields theme-{{ theme is defined ? theme }}">
        {% include 'formbuilder2/forms/_includes/messages/success' ignore missing %}
        {% include 'formbuilder2/forms/_includes/messages/error' ignore missing %}
    </div>
</section>