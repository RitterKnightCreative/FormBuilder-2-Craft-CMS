{% set honeypotEnabled = form.spamProtectionSettings.honeypot.enabled ? true : false %}
{% set honeypotMessage = form.spamProtectionSettings.honeypot.message %}

<div class="option-item {% if honeypotEnabled %}option-enabled{% endif %}"
    id="option-honeypot"
    data-modal="true"
    data-modal-title="{{ "Honeypot Message" |t }}"
    data-modal-instructions="{{ "Enter message for screen readers." |t }}"
    data-input-hint="{{ "TEXT" |t}}"
    data-modal-success-message="{{ "Honeypot Protection Updated." |t }}"
    data-input-value="{{ form.spamProtectionSettings.honeypot.text is defined ? form.spamProtectionSettings.honeypot.text : '' }}">
    <span class="option-title">
        <span class="option-text">{{ "Honeypot" |t }}</span>
        <span class="option-result {% if not honeypotEnabled %}hidden{% endif %}">
            {% include 'formbuilder2/_includes/icons/honeypot' ignore missing %}
            <code>{{ honeypotMessage }}</code>
        </span>
    </span>
    <div class="option-actions">
        <a href="#" class="option-edit hidden" title="{{ "Edit" |t }}">{% include 'formbuilder2/_includes/icons/pencil' ignore missing %}</a>
        {% if honeypotEnabled %}
            <a href="#" class="btns btn-small btn-moss toggle-option" title="{{ "Toggle" |t }}">{{ "Disable" |t }}</a>
        {% else %}
            <a href="#" class="btns btn-small btn-moss toggle-option" title="{{ "Toggle" |t }}">{{ "Enable" |t }}</a>
        {% endif %}
    </div>
    
    <input type="hidden" value="true" class="enable-form-option" name="spamProtectionSettings[honeypot][enabled" {% if honeypotEnabled %}checked{% endif %}>
    <input type="hidden" class="text form-option-input" size="50" name="spamProtectionSettings[honeypot][text" value="{{ honeypotMessage }}" autocomplete="off">
</div>