{% set submitterNotificationEnabled = form.notify.submitter.enabled is defined ? form.notify.submitter.enabled %}
{% set hideSubmitterNotification = form.settings.sections.hideSubmitterNotification is defined ? form.settings.sections.hideSubmitterNotification %}

<section class="cmp-tout section-collapsible" {% if hideSubmitterNotification %} data-collapsed{% endif %}>
    <input type="checkbox" value="1" name="settings[sections][hideSubmitterNotification]" class="section-toggle hidden" {% if hideSubmitterNotification %}checked{% endif %}>

    <header class="theme-{{ theme is defined ? theme }}">
        <div class="titlebar">
            <span class="tout-title">{{ "Submitter Notification" |t }}</span>
            <div class="preview"></div>
        </div>
        <div class="actions">
            {% if form.notify.submitter.enabled is defined and form.notify.submitter.enabled %}
                <div class="status on" title="Enabled"></div>
            {% else %}
                <div class="status off" title="Disabled"></div>
            {% endif %}

            <a class="icons collapser" title="Collapse" role="combobox" tabindex="0"></a>
            <a class="icons settings last" title="Settings" role="combobox" tabindex="0"></a>

            <div class="menu">
                <ul class="padded">
                    <li {% if not submitterNotificationEnabled %}class="hidden"{% endif %}><a data-action="disable"><span class="status off"></span>{{ "Disable"|t }}</a></li>
                    <li {% if submitterNotificationEnabled %}class="hidden"{% endif %}><a data-action="enable"><span class="status enabled"></span>{{ "Enable"|t }}</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="body notification-fields theme-{{ theme is defined ? theme }}">
        {% include 'formbuilder2/forms/_includes/notify/notify-submitter' ignore missing %}
    </div>
</section>