                    Test
                </div>
            </div> #}
        </div>

        <div class="editform-sidebar item" data-position="right">
            <div class="pane meta">
                {% set ant = form.getErrors('adminNotificationTemplateId') |length %}
                {% set cnt = form.getErrors('customerNotificationTemplateId') |length %}
                {% set tab = 1 %}
                
                {% if ant == 1 or cnt == 1 %}
                    {% set taberror = true %}
                {% else %}    
                    {% set taberror = false %}
                {% endif %} 

                <nav id="tabs2" class="tabs">
                    <ul>
                        <li>
                            <a class="tab {{ tab == 1 ? ' sel' : '' }}" href="#tab-form-settings">
                                {{ "Settings"|t }}
                            </a>
                        </li>
                        <li>
                            <a class="tab {{ tab == 2 ? ' sel' : '' }} {% if taberror %}error{% endif %}" href="#tab-spam-protection">
                                {{ "Spam"|t }}
                            </a>
                        </li>
                    </ul>
                </nav>

                {% include 'formbuilder2/forms/_includes/form-settings/basic-settings' ignore missing %}
                {% include 'formbuilder2/forms/_includes/spam-protection' ignore missing %}

            </div>

            <section class="custom-redirect-tout cmp-tout theme-moss">
                <header>
                    <span class="tout-title">{{ "Custom Redirects" |t }}</span>
                </header>
                <main>
                    {% include 'formbuilder2/forms/_includes/form-settings/redirect' ignore missing %}
                </main>
            </section>

            <div class="pane meta delete-form-meta last">
                <a href="#" class="btns btn-danger delete-form">{{ "Delete Form" |t }}</a>
            </div>
        </div>



    </div>


